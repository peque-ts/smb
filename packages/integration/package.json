    "test:coverage": "c8 pnpm test && make-coverage-badge --output-path ./coverage-badge.svg",
    "lint": "eslint \"./{src,test}/**/*.ts\" --fix"
  },
  "author": "Simone Di Cicco",
  "license": "ISC",
  "dependencies": {
    "@pequehq/di": "^1.0.0",
    "@pequehq/smb-client": "^1.0.3",
    "@pequehq/smb-server": "workspace:*"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "ts-node": "^10.4.0"
  }
}
