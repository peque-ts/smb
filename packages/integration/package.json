{
  "name": "@pequehq/integration",
  "version": "1.0.0",
  "description": "Peque SMB Integration Tests",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "ts-node src/connection.ts",
    "build": "pnpm clean && tsc",
